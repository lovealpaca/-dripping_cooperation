/* pages/index/index.wxss */

#body {
  width: 100%;
  position: absolute;
}

view {
  height: 70rpx;
  padding: 8rpx;
  border-bottom: 1rpx solid #d7d7d7;
}
.top{
  height: 350rpx;
}
.top,.bottom{
  border: 0;
}
.bottom view{
  border: 0px;
}
.nostart {
  border: 0;
}

.add {
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #f1f1f1;
  font-weight: 100;
  background: #87cefa;
  float: right;
}

.section {
  width: 66%;
  border: 0;
  float: right;
  padding: 0;
  height: 70rpx;
  line-height: 70rpx;
}

.work_order text {
  display: block;
  line-height: 70rpx;
  width: 40%;
  float: left;
}

.create_time {
  width: 100%;
}

.picker {
  width: 100%;
  padding: 0;
  border: 1px solid #a1a1a1;
  text-align: center;
  border-radius: 10rpx;
  height: 100%;
  line-height: 70rpx;
}

.creat_time text {
  float: left;
  display: block;
  height: 100%;
  width: 30%;
  line-height: 70rpx;
}

picker {
  width: 50%;
  height: 100%;
  float: left;
}

.all_work {
  height: 140rpx;
  display: flex;
}

.all_work view {
  padding: 0;
  border: 0;
  width: 30%;
  height: 120rpx;
  background: #d7d7d7;
  flex: 1;
  margin: 10rpx 10rpx;
}

.select {
  width: 30%;
  float: right;
  color: #fff;
  height: 70rpx;
  font-size: 28rpx;
  background: #87cefa;
}

.all_work view text {
  width: 100%;
  height: 60rpx;
  display: block;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #505050;
}
.bottom{
  height: 470rpx;
  margin-bottom: 10rpx;
  background: #fff;
}
.bottom .list{
  height: 70rpx;
  line-height: 70rpx;
  color: #707070;
  font-weight: 200;
}